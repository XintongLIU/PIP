<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pip.domain">
	<class name="Teacher" table="teacher">
		<cache usage="read-write" /> <!-- 缓存 -->
		<id name="teacherID" column="teacherID" type="int">
			<generator class="identity"/>
		</id>
		<property name="teacherName" column="teacherName" length="50"
			type="string" />
		<property name="password" column="password" length="50"
			type="string" />
	</class>
</hibernate-mapping>
